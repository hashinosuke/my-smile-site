    </footer>
    
    <div id="modal" class="modal-backdrop fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 opacity-0 pointer-events-none">
        <div id="modal-content" class="modal-content bg-white rounded-lg shadow-xl w-full max-w-md p-6 text-center transform scale-95 opacity-0">
            <p id="modal-age" class="text-3xl font-bold text-indigo-600 kaisei-font mb-2"></p>
            <p id="modal-text" class="text-gray-700 leading-relaxed"></p>
            <button id="close-modal" class="mt-6 bg-indigo-600 text-white font-bold py-2 px-6 rounded-full hover:bg-indigo-700 transition-colors">閉じる</button>
        </div>
    </div>

    <script>
        const lifeEvents = [
            { chapter: "芸能界での幕開け", age: "0歳", text: "熊本にて誕生。生後10ヶ月で芸能事務所入り。土師野隆之介、爆誕！", icon: "🎬" },
            { age: "1歳", text: "おむつのCMで芸能界デビュー。ギャラよりもミルクが優先。", icon: "🍼" },
            { age: "2歳", text: "自由奔放な姉に強く育てられ、精神力がつく。", icon: "👧" },
            { age: "3歳", text: "ドラマ『白夜行』に出演。弟も生まれ、人生の共演者が増える。", icon: "👦" },
            { age: "4歳", text: "「イヤ！」期突入。人生で唯一、全力で大人に逆らった一年。", icon: "🙅" },
            { age: "5歳", text: "幼稚園のサッカークラブでエース気取り。将来はバロンドール？", icon: "⚽" },
            { age: "6歳", text: "人生最初にして最大のモテ期到来。クラスの全女子の初恋を奪う。", icon: "💖" },
            { age: "7歳", text: "映画主演と空手全国準優勝。武芸の道極まれり。", icon: "🥋" },
            { age: "8歳", text: "映画キャンペーンで全国行脚。出席日数は少ないが、経験値は満タン。", icon: "✈️" },
            { chapter: "学びと挑戦", age: "9歳", text: "給食当番の帽子を忘れ、嘘でごまかしてバレる。誠実さを学ぶ。", icon: "🤥" },
            { age: "10歳", text: "アナ雪を大熱唱し、みんなの人気者に！", icon: "🎤" },
            { age: "11歳", text: "ドラマや映画など、引っ張りだこの日々。予定帳がマネージャーと被るレベル。", icon: "🗓️" },
            { age: "12歳", text: "中学受験のため俳優業を一時封印。文武芸の「文」強化月間へ。", icon: "📚" },
            { age: "13歳", text: "慶應中等部入学。「一番苦手」を選んでサッカー部へ。", icon: "🥅" },
            { age: "14歳", text: "頭が良いというアイデンティティを喪失。読書に逃げて、知識の沼にハマる。", icon: "📖" },
            { age: "15歳", text: "音楽祭で漫才に挑戦し爆死。滑って学ぶ、人の笑いの難しさ。", icon: "😂" },
            { chapter: "自己探求と葛藤", age: "16歳", text: "慶應義塾湘南藤沢高等部入学。一瞬系音楽部に入るが、楽しさが忘れられずに再びサッカー部へ。", icon: "🔄" },
            { age: "17歳", text: "サッカー部で大一番で敗北。悔しさから努力マシーンに変身。ギアが入る。", icon: "⚙️" },
            { age: "18歳", text: "主演映画の舞台挨拶と引退試合が被り、出場を断念。人生で初めての大きな挫折。", icon: "💔" },
            { chapter: "新たな道へ", age: "19歳", text: "大学生活が開幕。学業・バイト・サークル三刀流の本格稼働。", icon: "⚔️" },
            { age: "20歳", text: "ノルウェーへ留学。「幸せって何？」を探しに行ったら、オーロラに出会った。", icon: "🌌" },
            { age: "21歳", text: "休学してまた三刀流（俳優・インターン・パーソナルトレーナー）修行へ。経験がバキバキに。", icon: "💪" },
            { age: "22歳", text: "電通から内定。全ての経験が、線ではなく面になった瞬間。", icon: "💡" },
            { type: "goal", text: "週末は子どもと公園でピクニックするような、あたたかな家庭を築く。\n社会に必要とされ、自分も納得できる価値を創出する仕事をする。", icon: "🎯" }
        ];

        const board = document.getElementById('sugoroku-board');
        let currentChapter = "";

        lifeEvents.forEach((event, index) => {
            if (event.chapter && event.chapter !== currentChapter) {
                currentChapter = event.chapter;
                const chapterDiv = document.createElement('div');
                chapterDiv.className = 'flex justify-center my-8';
                chapterDiv.innerHTML = `<h3 class="kaisei-font text-xl md:text-2xl font-bold bg-indigo-100 text-indigo-800 py-2 px-6 rounded-full shadow-sm">${currentChapter}</h3>`;
                board.appendChild(chapterDiv);
            }

            if (event.type === "goal") {
                const goalDiv = document.createElement('div');
                goalDiv.className = `flex justify-center my-16`;
                goalDiv.innerHTML = `
                    <div class="milestone-card w-full max-w-2xl p-8 rounded-lg shadow-xl bg-indigo-600 text-white text-center">
                        <div class="text-5xl mb-4">${event.icon}</div>
                        <h2 class="text-3xl font-bold kaisei-font mb-4">🎯 ゴール</h2>
                        <p class="text-lg leading-relaxed whitespace-pre-wrap">${event.text}</p>
                    </div>
                `;
                board.appendChild(goalDiv);
            } else {
                const isOdd = index % 2 !== 0;
                const milestoneWrapper = document.createElement('div');
                milestoneWrapper.className = `flex items-center my-4 ${isOdd ? 'justify-start' : 'justify-end'}`;

                const card = document.createElement('div');
                card.className = `milestone-card cursor-pointer w-full md:w-5/12 p-5 rounded-lg shadow-lg bg-white border border-gray-200`;
                card.innerHTML = `
                    <div class="flex items-center">
                        <div class="text-3xl mr-4">${event.icon}</div>
                        <div>
                            <p class="text-xl font-bold text-indigo-700 kaisei-font">${event.age}</p>
                            <p class="text-gray-600 text-sm md:text-base">${event.text}</p>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => openModal(event.age, event.text));
                milestoneWrapper.appendChild(card);
                board.appendChild(milestoneWrapper);
            }
        });

        const modal = document.getElementById('modal');
        const modalContent = document.getElementById('modal-content');
        const modalAge = document.getElementById('modal-age');
        const modalText = document.getElementById('modal-text');
        const closeModalBtn = document.getElementById('close-modal');

        function openModal(age, text) {
            modalAge.textContent = age;
            modalText.textContent = text;
            modal.classList.remove('opacity-0', 'pointer-events-none');
            modalContent.classList.remove('scale-95', 'opacity-0');
        }

        function closeModal() {
            modal.classList.add('opacity-0');
            modalContent.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                modal.classList.add('pointer-events-none');
            }, 300);
        }

        closeModalBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });
    </script>
</body>
</html>
